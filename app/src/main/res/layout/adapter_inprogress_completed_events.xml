<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_190sdp"
    android:layout_marginRight="@dimen/_18sdp"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_34sdp"
        android:background="@drawable/ic_white_round_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        app:layout_constraintLeft_toRightOf="@+id/tvUserName"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/helvetica_neue_md"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#474747"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txt_event_completedtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_event_title"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/helvetica_neue_md"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/Light_Grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_event_completedtime"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/helvetica_neue_md"
            android:lines="2"
            android:singleLine="false"
            android:textColor="@color/Light_Grey"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_take_event"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_42sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/ic_btn_bg"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/helvetica_neue_md"
            android:letterSpacing="@dimen/letter_spacing"
            android:text="@string/label_take_over_job"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/circle_shape"
            android:elevation="10dp"
            android:gravity="center"
            android:letterSpacing="0.04"
            android:textColor="#bbbbbe"
            android:textSize="14sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_25sdp"
            android:background="?android:attr/listDivider" />
    </FrameLayout>

</FrameLayout>