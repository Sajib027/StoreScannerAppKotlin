<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_24sdp"
    android:paddingBottom="@dimen/_24sdp"
    android:paddingLeft="@dimen/_12sdp"
    android:paddingStart="@dimen/_12sdp"
    android:paddingEnd="@dimen/_12sdp"
    android:paddingRight="@dimen/_12sdp"
    android:gravity="center|top"
    android:background="@drawable/ic_white_round_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_password_required"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="49dp" />

    <EditText
        android:id="@+id/etPwd"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:lines="1"
        android:drawableBottom="@drawable/ic_yourname_teal_selector"
        android:maxLength="32"
        android:singleLine="true"
        android:focusable="true"
        android:textAlignment="center"
        android:fontFamily="@font/helvetica_neue_md"
        android:textColor="@color/snackBarColor"
        android:textColorHighlight="@color/Teal"
        android:textColorHint="@color/text_hint_color"
        android:textSize="17sp"
        android:inputType="textPassword" />

    <RelativeLayout
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/tvCancel"
            android:padding="@dimen/_10sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="13sp"
            android:background="@drawable/ic_pass_dialog_btn"
            android:fontFamily="@font/helvetica_neue_md"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discard" />

        <Button
            android:id="@+id/tvYes"
            android:padding="@dimen/_10sdp"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/ic_pass_dialog_btn"
            android:fontFamily="@font/helvetica_neue_md"
            android:layout_height="wrap_content"
            android:text="@string/proceed" />
    </RelativeLayout>

</LinearLayout>